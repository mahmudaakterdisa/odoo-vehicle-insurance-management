<odoo>
    <!-- Customers Action -->
    <record id="action_insurance_customer" model="ir.actions.act_window">
        <field name="name">Customers</field>
        <field name="res_model">insurance.customer</field>
        <field name="view_mode">list,form,kanban</field>
        <field name="help" type="html">
            <p>
                Manage all your insurance customers here.
            </p>
        </field>
    </record>

    <!-- Policies Action -->
    <record id="action_insurance_policy" model="ir.actions.act_window">
        <field name="name">Insurance Policies</field>
        <field name="res_model">insurance.policy</field>
        <field name="view_mode">list,form,kanban</field>
        <field name="help" type="html">
            <p>
                Manage all insurance policies here.
            </p>
        </field>
    </record>

    <!-- Claims Action -->
    <record id="action_insurance_claim" model="ir.actions.act_window">
        <field name="name">Claims</field>
        <field name="res_model">insurance.claim</field>
        <field name="view_mode">list,form,kanban</field>
        <field name="help" type="html">
            <p>
                Manage all insurance claims here.
            </p>
        </field>
    </record>
</odoo>
